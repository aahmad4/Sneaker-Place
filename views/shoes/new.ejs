<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Post a New Shoe</h1>
		<div style="width: 80%; margin: 25px auto;">
			<form action="/shoes" method="POST">
				<div class="form-group mb-3">
					<input class="form-control" name="name" type="text" placeholder="Shoe Name" required>
				</div>
				<div class="form-group mb-3">
					<input class="form-control" name="price" type="number" placeholder="Price" min="0.01" step="0.01"
						required>
				</div>
				<div class="form-group mb-3">
					<input class="form-control" name="image" type="text" placeholder="Image url" required>
				</div>
				<div class="form-group mb-3">
					<input class="form-control" name="Description" type="text" placeholder="Description" required>
				</div>
				<div class="form-group mb-3">
					<button class="btn btn-lg btn-success btn-block">SUBMIT</button>
				</div>
			</form>
			<a href="/shoes">Go back</a>
		</div>
	</div>
</div>
<%- include("../partials/footer") %>