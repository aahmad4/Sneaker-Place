<%- include("../partials/header") %>

<div class="container">
	
	<div class="row">
		<h1 style="text-align: center;">Edit <%= shoe.name %></h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/shoes/<%= shoe._id %>/?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" name="shoe[name]" type="text" value="<%= shoe.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" name="shoe[price]" type="number" value="<% shoe.price %>" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" name="shoe[image]" type="text" value="<%= shoe.image %>">
				</div>
				<div class="form-group">
					<input class="form-control" name="shoe[description]" type="text" value="<%= shoe.description %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">SUBMIT</button>
				</div>
			</form>
			<a href="/shoes">Go back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>
