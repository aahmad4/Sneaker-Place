<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Edit <%= shoe.name %></h1>
		<div style="width: 80%; margin: 25px auto;">
			<form action="/shoes/<%= shoe._id %>/?_method=PUT" method="POST">
				<div class="form-group mb-3">
					<input class="form-control" name="shoe[name]" type="text" value="<%= shoe.name %>" required>
				</div>
				<div class="form-group mb-3">
					<input class="form-control" name="shoe[price]" type="number" value="<%= shoe.price %>" min="0.01"
						step="0.01" required>
				</div>
				<div class="form-group mb-3">
					<input class="form-control" name="shoe[image]" type="text" value="<%= shoe.image %>" required>
				</div>
				<div class="form-group mb-3">
					<input class="form-control" name="shoe[description]" type="text" value="<%= shoe.description %>"
						required>
				</div>
				<div class="form-group mb-3">
					<button class="btn btn-lg btn-success btn-block">SUBMIT</button>
				</div>
			</form>
			<a href="/shoes">Go back</a>
		</div>
	</div>
</div>
<%- include("../partials/footer") %>