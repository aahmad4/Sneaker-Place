<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Edit Comment</h1>
		<div style="width: 80%; margin: 25px auto;">
			<form action="/shoes/<%=shoe_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
				<div class="form-group mb-3">
					<input class="form-control" name="comment[text]" type="text" value="<%= comment.text %>" required>
				</div>
				<div class="form-group mb-3">
					<button class="btn btn-lg btn-success btn-block">SUBMIT</button>
				</div>
			</form>
			<a href="/shoes">Go back</a>
		</div>
	</div>
</div>
<%- include("../partials/footer") %>